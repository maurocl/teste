<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.tygerstar.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name=".AppCadCli" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Carrega a biblioteca do Maps -->
        <uses-library android:name="com.google.android.maps" ></uses-library>
        
        <activity android:name=".negocio.MapaController" ></activity>
        <activity android:name=".negocio.CadastroController" ></activity>
        <activity android:name=".negocio.ListagemController" ></activity>
        <activity android:name=".negocio.LocalizacaoController" ></activity>
        <activity android:name=".negocio.FotoController" ></activity>
        <activity android:name=".negocio.TransmissaoController" ></activity>
        <activity android:name=".negocio.ListagemQAController"></activity>
        <activity android:name=".negocio.SlideShowController"></activity>
        
    </application>

    <uses-sdk android:minSdkVersion="7" />

    <!-- Adicionada para possibilitar o uso do GPS -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>

    <!-- Adicionada para possibilitar o uso da camera -->
    <uses-permission android:name="android.permission.CAMERA" ></uses-permission>
    <uses-permission android:name="android.permission.INTERNET" ></uses-permission>

</manifest>