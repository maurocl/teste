<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="false" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <!-- Header -->

        <include layout="@layout/include_header" />

        <!-- Relatórios -->

        <TextView
            android:id="@+id/textView1"
            style="@style/texto18"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/azul01"
            android:gravity="center_vertical|center_horizontal"
            android:text="Relatórios"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp" />

        <!-- Nº de Participantes Cadastrados -->

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nº de Participantes Cadastrados"
                    android:textSize="@dimen/Fonte30" />

                <EditText
                    android:id="@+id/numParticipantes"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:editable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Exibe o nº de participantes"
                    android:inputType="number"
                    android:textSize="@dimen/Fonte30" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                
                 <TextView
                     android:id="@+id/textView6"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Nº de Fotos Polaroid"
                     android:textSize="@dimen/Fonte30" />

                 <EditText
                     android:id="@+id/numFotosPolaroid"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:editable="false"
                     android:ems="10"
                     android:focusable="false"
                     android:hint="Exibe o nº de fotos polaroid"
                     android:inputType="number"
                     android:textSize="@dimen/Fonte30" >

                     <requestFocus />
                 </EditText>
                
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nº de Fotos Cabine"
                    android:textSize="@dimen/Fonte30" />

                <EditText
                    android:id="@+id/numFotosCabine"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:editable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Exibe o nº de fotos cabine"
                    android:inputType="number"
                    android:textSize="@dimen/Fonte30" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nº de Fotos Coloridas"
                    android:textSize="@dimen/Fonte30" />

                <EditText
                    android:id="@+id/numFotosColoridas"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:editable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Exibe o nº de fotos coloridas"
                    android:inputType="number"
                    android:textSize="@dimen/Fonte30" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nº de Fotos PB"
                    android:textSize="@dimen/Fonte30" />

                <EditText
                    android:id="@+id/numFotosPB"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:editable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Exibe o nº de fotos em P&amp;B"
                    android:inputType="number"
                    android:textSize="@dimen/Fonte30" />
            </TableRow>

        </TableLayout>

        <!-- Botões -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:baselineAligned="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn1"
                style="@style/btnConfirmaStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Exportar arquivo para Excel" />

            <Button
                android:id="@+id/btn2"
                style="@style/btnConfirmaStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Exibe Participantes" />

        </LinearLayout>

        <!-- Footer -->

        <include layout="@layout/include_footer" />
    </LinearLayout>

</ScrollView>