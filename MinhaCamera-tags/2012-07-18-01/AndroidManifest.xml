<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.mltech"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />
    

    <!-- Permissão do uso da Camera -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Permissão de uso camera autofocus -->
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <!-- Permissão para gravar arquivos no dispositivo de armazenamento externo -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Permissão do uso da Rede (Internet) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Declaração de features requeridas pela aplicação -->
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- configura esta activity para usar orientacao landscape -->

        <activity
            android:name=".CameraActivity"
            android:label="Câmera"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
    </application>

</manifest>