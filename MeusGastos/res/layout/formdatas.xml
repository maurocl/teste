<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- Data -->


    <!-- Botão de Inserção -->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <TableRow
            android:id="@+id/tblRowDataInicial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Data Inicial"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/dtInicial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="2"
                android:ems="10"
                android:hint="Data Inicial"
                android:inputType="date" />
        </TableRow>

        <TableRow
            android:id="@+id/tblDataFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Data Final"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/dtFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="2"
                android:ems="10"
                android:hint="Data final"
                android:inputType="date" >

                <requestFocus />
            </EditText>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/inserir"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Pressione o botão para inserir"
        android:text="Inserir"
        android:textSize="20dp" />

</LinearLayout>