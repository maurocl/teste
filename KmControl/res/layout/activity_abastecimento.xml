<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TableLayout
            android:id="@+id/add_abastecimento_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/edit_abs_data"
                    android:hint="Data"
                    android:inputType="date" />

                <EditText
                    android:id="@+id/edit_abs_km_total"
                    android:hint="Km"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/edit_abs_valor"
                    android:hint="Valor R$"
                    android:inputType="numberDecimal" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/edit_abs_num_litros"
                    android:hint="Litros"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/edit_abs_km_parcial"
                    android:hint="Km parcial"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/edit_abs_media"
                    android:hint="Km/l"
                    android:inputType="numberDecimal" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                
                  <ImageButton
                      android:id="@+id/btn_add_abastecimento"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:src="@android:drawable/ic_input_add" />

            <ImageButton
                android:id="@+id/btn_cancel_add_abastecimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/ic_delete" />
                
            </TableRow>

        </TableLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/abastecimento_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

</LinearLayout>