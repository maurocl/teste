    <TextView
        android:id="@string/alcool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alcool" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/msgPromptAlcool"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@string/gasolina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gasolina" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/msgPromptGasolina"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Calcular" />

    <Button
        android:id="@+id/btnLimpar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="Limpar"
        android:hint="Pressione para faze novo calculo"
