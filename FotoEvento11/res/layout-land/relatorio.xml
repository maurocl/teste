<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="50dp"
    android:layout_marginBottom="50dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginTop="50dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <!-- Header -->

        <include layout="@layout/include_header" />

        <!-- Relatórios -->

        <TextView
            android:id="@+id/textView1"
            style="@style/texto18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="40dp"
            android:text="Relatórios"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <!-- Nº de Participantes Cadastrados -->

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nº de Participantes Cadastrados" />

        <EditText
            android:id="@+id/numParticipantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:focusable="false"
            android:hint="Exibe o nº de participantes"
            android:inputType="number" >
        </EditText>

        <!--  -->

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nº de Fotos Polaroid" />

        <EditText
            android:id="@+id/numFotosPolaroid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:focusable="false"
            android:hint="Exibe o nº de fotos Polaroid"
            android:inputType="number" >
        </EditText>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nº de Fotos Cabine" />

        <EditText
            android:id="@+id/numFotosCabine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:focusable="false"
            android:hint="Exibe o nº de fotos cabine"
            android:inputType="number" >
        </EditText>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nº de Fotos Coloridas" />

        <EditText
            android:id="@+id/numFotosColoridas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:focusable="false"
            android:hint="Exibe o nº de fotos coloridas"
            android:inputType="number" >
        </EditText>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nº de Fotos PB" />

        <EditText
            android:id="@+id/numFotosPB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:focusable="false"
            android:hint="Exibe o nº de fotos em P&amp;B"
            android:inputType="number" >
        </EditText>

        <!-- É um textView dummy -->

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="" />

        <!-- Botões -->

        <Button
            android:id="@+id/btn1"
            style="@style/btnConfirmaStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Exportar arquivo para Excel" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Botão2" />
        <!--
    <Button
        android:id="@+id/btn3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Botão3" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Botão4" />
        -->


        <!-- Footer -->

        <include layout="@layout/include_footer" />
    </LinearLayout>

</ScrollView>