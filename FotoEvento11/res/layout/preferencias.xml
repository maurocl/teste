<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <!-- Preferências -->

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="40dp"
            android:text="Preferências"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <!-- Preferências de email -->

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="Preferências de email"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <!-- Assunto tratado pelo email -->

        <TextView
            android:id="@+id/tvAssunto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assunto" />

        <EditText
            android:id="@+id/editAssunto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Assunto (subject) no envio de email"
            android:paddingBottom="20dp" />

        <!-- Descrição do corpo do email -->

        <TextView
            android:id="@+id/tvDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição" />

        <EditText
            android:id="@+id/editDescricao"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Descrição do evento (corpo do email)"
            android:text="editDescricao" />

        <!-- URL da imagem da tela inicial da aplicação -->

        <TextView
            android:id="@+id/tvImagemTelaInicial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:text="Imagem da tela inicial" />

        <EditText
            android:id="@+id/editUrlImagem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="URL da Imagem da tela inicial"
            android:text="URL da Imagem" />

        <!-- Nº da Câmera Frontal -->

        <TextView
            android:id="@+id/tvNumCameraFrontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nº da câmera frontal:" />

        <EditText
            android:id="@+id/editNumCameraFrontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Nº da câmera frontal"
            android:text="Nº da câmera frontal" />

        <!-- Botões -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingTop="20dp" >

            <!-- Botão Gravar -->

            <Button
                android:id="@+id/btnGravarPreferencias"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Salvar" />

            <!-- Botão Cancelar -->

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancelar" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>