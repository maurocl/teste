<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/preto"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/apiOutputLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:paddingTop="3dp"
        android:text="tring/api_response"
        android:textColor="@color/branco" />

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp" >

        <TextView
            android:id="@+id/apiOutput"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:textColor="@color/white" />
    </ScrollView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@color/grey"
        android:paddingTop="3dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/view_photo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="view_photo" />

        <Button
            android:id="@+id/tag_photo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="tag_photo" />
    </LinearLayout>

    <ImageView
        android:id="@+id/uploadedPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingTop="3dp" />

    <TextView
        android:id="@+id/tip_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:paddingTop="3dp"
        android:text="@string/tip_label"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/usefulTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:paddingTop="5dp"
        android:textColor="@color/white" />

</LinearLayout>