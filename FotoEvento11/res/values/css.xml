<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="estiloExemplo">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:background">@color/blue</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="texto12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/preto</item>
    </style>

    <style name="texto12negrito" parent="texto12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/preto</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="texto14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/amarelo</item>
    </style>

    <style name="texto18">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/amarelo</item>
    </style>

    <style name="texto14azul">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/azul</item>
    </style>

    <style name="texto18azul">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/azul</item>
    </style>

    <style name="btnConfirmaStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/azul</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btnCancelarStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/azul</item>
        <item name="android:textStyle">bold</item>
    </style>

    
    <!--  -->
    
      <style name="ListItemTitle">
        <item name="android:textColor">@color/branco</item>
        <item name="android:textSize">@dimen/titleListItem</item>
        <item name="android:textStyle">bold</item>
	</style>
	
    <style name="ListItemDesc">
        <item name="android:textColor">@color/azul14</item>
        <item name="android:textSize">@dimen/descListItem</item>
	</style>

    <!-- Header -->
    <style name="Header">
        <item name="android:background">@color/azul07</item>
        <item name="android:gravity">center</item>
	</style>
    	
    <style name="HeaderText">
        <item name="android:textColor">@color/preto</item>
        <item name="android:textSize">@dimen/TitleText</item>
        <item name="android:textStyle">bold</item>
	</style>
	
    <!-- Footer -->
    <style name="Footer">
        <item name="android:background">@color/azul07</item>
        <item name="android:gravity">center</item>
	</style>

    <style name="FooterText">
        <item name="android:textColor">@color/branco</item>
        <item name="android:textSize">@dimen/generalText</item>
        <item name="android:gravity">center</item>
	</style>
    
    <!-- Label Text -->
    <style name="LabelText">
        <item name="android:textColor">@color/preto</item>
        <item name="android:textSize">@dimen/generalText</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Field Row -->
    <style name="FieldRow">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    
    <!-- Button -->
    <style name="Button">
        <item name="android:textColor">@color/preto</item>
        <item name="android:textSize">@dimen/generalText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/shape_button</item>
    </style>
    
    
    
</resources>